<!DOCTYPE html>
<html lang="en">
<head>
    <title>ConUshop | Home </title>
    <% include ../components/header.ejs %>

</head>
<body>
<!-- navigator -->
<% include ../components/navigator.ejs %>
<!-- //navigator -->

<% include ../components/adminNav.ejs %>

<div class="container">
    <ul class="nav nav-tabs" style="list-style-type: none;" id="myTab">
        <li class="active"><a data-toggle="tab" href="#edit">Edit</a></li>
        <li><a data-toggle="tab" href="#view">View</a></li>
    </ul>
    <p id="message"></p>

</div>

<!-- flash messages -->
<% include ../components/flashMessages.ejs %>

<div class="tab-content">
    <div id="view" class="tab-pane fade">
        <br><br>
        <h1 class="text-center">View Desktops</h1>
        <br><br>
    <!-- List of items -->
        <div>
            <hr>
            <% if (typeof data!='undefined') { %>
            <div class="container">
                <br><br><br>
                <h2 class="text-center">All Desktops</h2>
                <br>
                <table class="table table-striped table-condensed" id="prodTable">
                    <thead>
                    <tr>
                        <th>Model</th>
                        <th>Brand</th>
                        <th>Processor</th>
                        <th>Ram</th>
                        <th>Storage</th>
                        <th>Cores</th>
                        <th>Dimensions</th>
                        <th>Weight</th>
                        <th>Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < data.length; i++) { %>
                    <tr>
                        <td class="model"><%= data[i].model %></td>
                        <td class="brand"><%= data[i].brand %></td>
                        <td class="processor"><%= data[i].processor %></td>
                        <td class="ram"><%= data[i].ram %></td>
                        <td class="storage"><%= data[i].storage %></td>
                        <td class="cores"><%= data[i].cores %></td>
                        <td class="dimensions"><%= data[i].dimensions %></td>
                        <td class="weight"><%= data[i].weight %></td>
                        <td class="price"><%= data[i].price %></td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
        </div>
    </div>
    <div id="edit" class="tab-pane fade in active">
        <br><br>
        <h1 class="text-center">Manage Desktops</h1>
        <br><br>
        <div class="container">


            <div id="selector" class="btn-group" data-toggle="buttons-radio">
                <% if (!editIsOn) { %>
                <button name="editToggle" class="btn btn-default" onclick="beginSession('/admin/desktops')">Turn Edit ON</button>
                <% } %>
                <% if (editIsOn) { %>
                <button name="editToggle" class="btn btn-danger" onclick="endSession('/admin/desktops')">Turn Edit OFF</button>
                <% } %>
            </div>
            <br><br>
         <!-- Item register form -->
            <h1 class="well">Register a  new DESKTOP</h1>
            <div class="col-lg-12 well">
                <div class="row">
                    <form data-toggle="validator" role="form" method="post" action="/admin/addProdSpec" >






                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 AddDesktop">
                                    <label>Product Table: </label>
                                    <input type="text" class="form-control" name="prodType" value="Desktop" readonly>
                                </div>
                                <div class="col-sm-6 AddDesktop">
                                    <div class="form-group">
                                        <label  for="model" class="control-label">Model Number</label>
                                        <input type="text" id="model" class="form-control" name="model" placeholder="model" pattern="^DES\d{1,7}$" data-error="Please enter valid model." required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="AddDesktop">
                                <div class="form-group">
                                    <label>Brand</label>
                                    <input type="text" class="form-control" name="brand" placeholder="brand"  required>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3 AddDesktop">
                                    <div class="form-group">
                                        <label>Processor</label>
                                        <input type="text" class="form-control" name="processor" placeholder="processor" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-sm-3 AddDesktop">
                                    <div class="form-group">
                                        <label>Ram</label>
                                        <input type="text" class="form-control" name="ram" placeholder="ram" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-sm-3 AddDesktop">
                                    <div class="form-group">
                                        <label>Storage</label>
                                        <input type="text" class="form-control" name="storage" placeholder="storage"required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="col-sm-3 AddDesktop">
                                    <div class="form-group">
                                        <label>Cores</label>
                                        <input type="text" class="form-control" name="cores" placeholder="cores"required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6 AddDesktop">
                                    <div class="form-group">
                                        <label>Dimensions</label>
                                        <input type="text" class="form-control" name="dimensions" placeholder="dimensions" pattern="^(\d{1,2}(\.\d{1,2})?\sx\s\d{1,2}(\.\d{1,2})?\sx\s\d{1,2}(\.\d{1,2})?)$" data-error="Please enter valid dimension." required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-sm-6 AddDesktop">
                                    <div class="form-group">
                                        <label>Weight</label>
                                        <input type="text" class="form-control" name="weight" placeholder="weight"  pattern="([^-]\d+\.{0,1}\d{0,2})" data-error="Please enter valid weight." required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                            </div>
                                <div class="AddDesktop">
                                    <div class="form-group">
                                        <label>Price</label>
                                        <input type="text" class="form-control" name="price" placeholder="price"  pattern="[^-]\d+\.{0,1}\d{0,2}" data-error="Please enter valid price." required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                            <br>
                            <button type="submit" class="btn btn-lg btn-success">Add desktop</button>
                        </div>

                    </form>
                </div>
            </div>

            <!-- List of items -->
            <div>
                <hr>
                <% if (typeof data!='undefined') { %>
                <div class="container">
                    <br><br><br>
                    <h2 class="text-center">Desktop Catalog</h2>
                    <p class="text-center">Simply modify any field and click edit to save</p>
                    <br>
                    <form data-toggle="validator" role="form">
                    <table class="table table-striped table-condensed" contenteditable="true" id="prodTable">

                        <thead>
                        <tr>
                            <th>Model</th>
                            <th>Brand</th>
                            <th>Processor</th>
                            <th>Ram</th>
                            <th>Storage</th>
                            <th>Cores</th>
                            <th>Dimensions</th>
                            <th>Weight</th>
                            <th>Price</th>
                            <th>Edit</td>
                            <th>Delete</th>
                            <th style="display:none;">Version</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(var i = 0; i < data.length; i++) { %>
                        <tr>
                            <td class="model" contenteditable="false"><%= data[i].model %></td>
                            <td class="brand"><%= data[i].brand %></td>
                            <td class="processor"><%= data[i].processor %></td>
                            <td class="ram"><%= data[i].ram %></td>
                            <td class="storage"><%= data[i].storage %></td>
                            <td class="cores"><%= data[i].cores %></td>
                            <td class="dimensions"><%= data[i].dimensions %></td>
                            <td class="weight"><%= data[i].weight %></td>
                            <td class="price"><%= data[i].price %></td>
                            <td style="display:none;" class="version"><%= data[i].version %></td>
                            <td contenteditable="false"><button class="btn btn-warning" onclick="updateProdSpec('Desktop', $(this).closest('tr'), '/admin/desktops')">Edit</button></td>
                            <td contenteditable="false"><button class="btn btn-danger" onclick="deleteProdSpec('Desktop', '<%= data[i].model%>', '/admin/desktops')">Delete</button></td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                    </form>

                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!--%= jsonData %-->
<!-- footer -->
<% include ../components/footer.ejs %>
<!-- //footer -->

</body>
</html>
